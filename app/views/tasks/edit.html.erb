<div class="p-2 m-2">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed, "Completed" %>
    <%= f.check_box :completed %>
    <br>
    <br>
    <%= f.submit %>
  <% end %>
</div>
